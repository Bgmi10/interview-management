{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      },
    ],
    "paths": {
      "@/*": ["./src/*"],
      "db": ["../../packages/db"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
, "app/lib/common.apits"  ],
  "exclude": [
    "node_modules"
  ]
}
